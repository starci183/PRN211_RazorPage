@page
@model Presentation.Pages.CustomerPage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Renting Transaction Details</h1>

<div class="mt-5">
    <div class="list-group">
        <div class="list-group-item">
            <div class="row">
                <div class="col-sm-2 fw-bold">Renting Date</div>
                <div class="col-sm-10">@Model.RentingTransaction.RentingDate</div>
            </div>
        </div>
        <div class="list-group-item">
            <div class="row">
                <div class="col-sm-2 fw-bold">Total Price</div>
                <div class="col-sm-10">@Model.RentingTransaction.TotalPrice</div>
            </div>
        </div>
        <div class="list-group-item">
            <div class="row">
                <div class="col-sm-2 fw-bold">Renting Status</div>
                <div class="col-sm-10">@Model.RentingTransaction.RentingStatus</div>
            </div>
        </div>
        <div class="list-group-item">
            <div class="row">
                <div class="col-sm-2 fw-bold">Customer Email</div>
                <div class="col-sm-10">@Model.RentingTransaction.CustomerId</div>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-page="./Index" class="btn btn-dark mt-3"> Back</a>
</div>
